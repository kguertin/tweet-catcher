<%- include('includes/head.ejs') %>
<%- include('includes/nav.ejs') %>
<div class="container">
    <h1 class="home-header">User Categories</h1>
    <div class="row row-cols-4">
        <% categories.forEach(category => {  %>
            <div class="col">
                <div class="card category-card" style="width: 18rem;">
                    <div class="card-body">
                        <h3><a class="tweet-category-header" href="/category/<%= category.name %>"><%= category.name %></a></h3>
                        <p class="card-text">Total Tweets: <%= category.tweetIds.length %></p>
                    </div>
                </div>
            </div>
                <% }) %>
    </div>
</div>
<%- include('includes/foot.ejs') %>
